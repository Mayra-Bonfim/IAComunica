        // --- SISTEMA DE ROTEAMENTO (HASH ROUTER) ---

        // Função para atualizar o Hash da URL
        function setRoute(route) {
            window.location.hash = route;
        }

        // Função que lê o Hash e decide o que mostrar
        function handleRouting() {
            const hash = window.location.hash.substring(1); // Remove o '#'
            
            // Se não tiver hash, ou for vazio, mostra a Home
            if (!hash) {
                showHomeView();
                return;
            }

            // Verifica se o hash é um ID de imóvel
            const property = propertiesData.find(p => p.id === hash);
            if (property) {
                showDetailView(property);
                return;
            }

            // Se for uma seção da home (venda, aluguel, misto)
            const sections = ['venda', 'aluguel', 'misto'];
            if (sections.includes(hash)) {
                showHomeView();
                // Pequeno delay para garantir que a home está visível antes de rolar
                setTimeout(() => {
                    const el = document.getElementById(hash);
                    if (el) el.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }, 10);
                return;
            }

            // Fallback: Se o hash não for reconhecido, vai para Home
            showHomeView();
        }

        // Renderiza a tela de Lista (Home)
        function showHomeView() {
            document.getElementById('details-view').classList.add('hidden');
            document.getElementById('home-view').classList.remove('hidden');
            window.scrollTo(0, 0);
        }

        // Renderiza a tela de Detalhes
        function showDetailView(property) {
            const container = document.getElementById('detail-container');
            
            const galleryHTML = property.images.map((img, index) => 
                `<img src="${img}" class="gallery-item ${index === 0 ? 'gallery-main' : ''}" alt="Foto ${index+1}">`
            ).join('');

            const featuresHTML = property.features.map(f => 
                `<div class="feature-item"><i class="fas fa-check-circle"></i> ${f}</div>`
            ).join('');

            container.innerHTML = `
                <div class="detail-header">
                    <h1 class="detail-title">${property.title}</h1>
                    <div class="detail-location"><i class="fas fa-map-marker-alt"></i> ${property.location}</div>
                </div>

                <div class="detail-gallery">
                    ${galleryHTML}
                </div>

                <div class="detail-content-grid">
                    <div class="detail-description">
                        <div class="detail-price">${property.price}</div>
                        <br>
                        <h3>Sobre o Imóvel</h3>
                        <p>${property.descLong}</p>
                        
                        <h3>Diferenciais</h3>
                        <div class="features-list">
                            ${featuresHTML}
                        </div>
                    </div>

                    <div class="detail-sidebar">
                        <h3 class="sidebar-title">Tenho Interesse</h3>
                        <form class="contact-form" onsubmit="event.preventDefault(); alert('Mensagem enviada! Entraremos em contato.');">
                            <div class="form-group"><input type="text" class="form-control" placeholder="Nome" style="background:#f4f4f4; color:#333; border:1px solid #ddd;"></div>
                            <div class="form-group"><input type="text" class="form-control" placeholder="Telefone" style="background:#f4f4f4; color:#333; border:1px solid #ddd;"></div>
                            <div class="form-group"><textarea class="form-control" rows="3" placeholder="Gostaria de agendar visita para: ${property.title}" style="background:#f4f4f4; color:#333; border:1px solid #ddd;"></textarea></div>
                            <button type="submit" class="submit-btn">Solicitar Contato</button>
                        </form>
                        <div style="text-align:center; margin-top:15px;">
                            <a href="https://wa.me/556131425518?text=Olá, tenho interesse no imóvel: ${property.title}" target="_blank" style="color:var(--whatsapp-green); font-weight:bold; text-decoration:none;">
                                <i class="fab fa-whatsapp"></i> Chamar no WhatsApp
                            </a>
                        </div>
                    </div>
                </div>
            `;

            document.getElementById('home-view').classList.add('hidden');
            document.getElementById('details-view').classList.remove('hidden');
            window.scrollTo(0, 0);
        }

        // Renderiza os Cards na Home
        function renderCards() {
            const gridVenda = document.getElementById('grid-venda');
            const gridAluguel = document.getElementById('grid-aluguel');
            const gridMisto = document.getElementById('grid-misto');

            propertiesData.forEach(p => {
                // AQUI: O link agora usa setRoute com o ID do imóvel
                const cardHTML = `
                    <article class="property-card">
                        <div class="card-image-container">
                            <span class="status-tag">${p.type === 'misto' ? 'Flex' : capitalize(p.type)}</span>
                            <img src="${p.images[0]}" alt="${p.title}">
                        </div>
                        <div class="card-content">
                            <span class="price">${p.price.split('|')[0]}</span>
                            <h3 class="card-title">${p.title}</h3>
                            <div class="card-features">
                                <span><i class="fas fa-bed"></i> ${p.specs.beds}</span>
                                <span><i class="fas fa-ruler-combined"></i> ${p.specs.area}</span>
                                <span><i class="fas fa-car"></i> ${p.specs.parking}</span>
                            </div>
                            <p class="card-desc">${p.descShort}</p>
                            <a onclick="setRoute('${p.id}')" class="details-btn">Ver Detalhes <i class="fas fa-arrow-right"></i></a>
                        </div>
                    </article>
                `;

                if (p.type === 'venda') gridVenda.innerHTML += cardHTML;
                else if (p.type === 'aluguel') gridAluguel.innerHTML += cardHTML;
                else gridMisto.innerHTML += cardHTML;
            });
        }

        function capitalize(str) {
            return str.charAt(0).toUpperCase() + str.slice(1);
        }

        // Inicialização
        document.addEventListener('DOMContentLoaded', () => {
            renderCards();
            handleRouting(); // Checa a rota inicial ao carregar a página
        });

        // Escuta mudanças no Hash (Botão Voltar/Avançar do navegador)
        window.addEventListener('hashchange', handleRouting);

    </script>
</body>
</html>
